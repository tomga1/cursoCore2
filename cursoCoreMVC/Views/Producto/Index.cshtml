@{
    ViewData["Title"] = "Lista de productos"; 
}

<div class="container py-4">   
    <div class="row mb-4">
        <div class="col-8">

            <h2 class="text-black">
                <i class="fas fa-list-alt"> </i> Lista de Productos
            </h2>
        </div>

        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-success text-white">
                <i class="fas fa-plus"> </i> Crear nuevo Producto

            </a>

        </div>
    </div>

    <div class="table-responsive">
        <table id="tblProductos" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Acciones</th>

                </tr>
            </thead>
            <tbody>
                <!-- Aca van las filas generadas por DataTables -->
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/producto.js"></script>
    <script>
        $(document).ready(function () {
            loadDataTable(); 
        });
    </script>
}